<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de contatos</title>

    <!-- FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@400;700&display=swap" rel="stylesheet">


    <!-- CSS -->
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/main.css">

    <!-- JAVASCRIPT -->
    <script src="/scripts/main.js"></script>
</head>
<body>
    <div class="viewContainer">
        <div id="container" class="container">
            <header>
                <h1>My contats</h1>
                <div class="findContact">
                    <form class="form" action="" method="POST">
                    <input class="busca" name="busca" type="text">
                    <button class="btn-busca" type="submit">@</button>
                </form>
                </div>
            </header>
            <main>


                <% 
                const names = nomes.map(isNome => isNome.nome);
                console.log(names);
                
                names.forEach(nome =>{
                %>

               <div class="contacts">
                    <input class="inp-contact" type="text" data-id='<%=nome%>' placeholder='<%= nome%>'>
                    <a class="button green" href="/detalhes/<%=nome%>"> Ver mais </a>
                    <a class="button red" href="/delete/<%=nome%>">Excluir</a>
                </div>

                <%
            });%> 
            </main>
        </div>
<!-- MODALS  AND BUTTONS -->
<button onclick="addNewContact()" class="button gray">
    Criar novo</button>
</div>

</body>
</html>